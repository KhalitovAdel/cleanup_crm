nav.sidebar
    & ul
        list-style none
        & li
            & a
                font-weight bold
                &:hover
                    text-decoration: none
nav.navigate-panel
    display: flex
    flex-direction: row
    justify-content: flex-start
    align-items: center
    & .main-nav-button
        position relative
        padding: 30px 10px
        & .add_new
            display: none
            position: absolute
            bottom: 0
            left calc(50% - 8px)
            & i.material-icons
                font-size: 1rem
                color: #004;
                cursor pointer
        &:hover
            & .add_new
                animation-delay: 1.5s;
                display: block
.wrapper-container
    background-color #fff
    box-shadow: 0 5px 5px -3px rgba(0,0,0,.2), 0 8px 10px 1px rgba(0,0,0,.14), 0 3px 14px 2px rgba(0,0,0,.12);
    border-radius: 3px
    padding: 5px
