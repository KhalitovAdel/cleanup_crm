#about
    & .item 
        min-height: 500px;
        & .image 
            width 55%
        & .wrapp
            width 35%
@media (max-width: 984px)
    #about
        & .item
            padding: 2rem 0
            position relative
            & .image
                position: absolute
                top 0 
                left 0
                width 100%!important
                height 100%!important
                &:after
                    content: ''
                    position: absolute
                    top 0 
                    left 0
                    width: 100%
                    height 100%
                    background-color rgba(255,255,255,.65)
            & .wrapp
                margin 0 auto
                z-index: 1
                width 95%!important