.main-b2b-calc
    background: transparent url('../../../../assets/img/b2b/bg.jpg') 50% 90% no-repeat / cover;
    width: 100%
    height: 40vh
    min-height: 250px
    padding: 0;
    position relative
    display: flex
    flex-direction: column
    justify-content: center
    &:before
        content: ''
        position: absolute
        top 0 
        left: 0
        width: 100%
        height 100%
        background-color: rgba(0,0,0,.3)
    & *
        z-index: 1

.calculate
    width: 100%
    padding 10px 0
    background-color rgb(179, 192, 211)

#window
    position relative
    background url(../../../../assets/img/b2b/second_bg.jpg) 50% 50% no-repeat /cover
    padding 50px 0
    &:after
        position: absolute
        content: ''
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(0,0,0,.65)
    & *
        z-index 1
        color white
owl-carousel
    & .object
        min-height: 500px
        display: flex
        flex-direction: row
        justify-content: space-evenly
        & .image
            width 45% 
        & .wrapp
            width 35%
            display: flex
            flex-direction: column
            justify-content: center
            align-content: center       
    & .comments
        & .image
            width 250px
            height 250px
            border-radius: 50%
        & .wrapp
            width 50%; 
            & .name 
                font-size: 1.5rem
                font-weight bold
    & .partners
        width: 200px
        height 200px
        display: flex
        flex-direction: column
        flex-wrap: wrap;
        justify-content: center
        align-items: center
        margin 0 auto
        margin-top 5rem
:host ::ng-deep owl-carousel
    & .owl-dots
        display flex
        flex-direction: row
        justify-content: center
        align-content: center
        position relative
        bottom: -10px
        & button.owl-dot
            min-width 0
            max-width: 20px
            max-height 20px
            margin 0 3px
            & span 
                margin 0
                border-radius: 0
                border 1px solid #004
                background-color #fff
            &.active
                width: 20px
                height 20px
                & span
                    width: 20px
                    height 20px
                    background-color #004 
@media (max-width: 768px)
    owl-carousel
        & .object
            position relative
            min-height: 500px
            display: flex
            flex-direction: row
            justify-content: space-evenly
            & .image
                position: absolute
                top 0
                left 0
                width 100%
                height: 100%
                &:after
                    content: ''
                    position: absolute
                    top: 0
                    left: 0
                    width: 100%
                    height 100%
                    background-color rgba(255,255,255, 0.65)
            & .wrapp
                width 95%
                display: flex
                flex-direction: column
                justify-content: center
                align-content: center
                z-index: 1
        & :host ::ng-deep .owl-dots
            margin-top 0
            position relative
        & .comments
            & .wrapp
                width: 100%
#statistic
    & .container
        & .wrap
            display: flex
            flex-direction: row
            & i.material-icons
                font-size: 3rem
                margin-right 10px
            & .details
                margin-bottom 10px
                & .number
                    font-size: 2rem
                    font-weight bold
                    margin-bottom 0
                & .description
                    color inherit
                    font-weight normal 
                    text-shadow: none
                    font-size: 1rem
                    text-align: left
@media (max-width: 984px)
    #statistic
        & .container
            & i.material-icons
                font-size: 1.5rem
            & .details
                & .number
                    font-size: 1.3rem
                & .description
                    font-size: 0.8rem
#about
    & .item 
        min-height: 500px;
        & .image 
            width 55%
        & .wrapp
            width 35%
@media (max-width: 984px)
    #about
        & .item
            padding: 2rem 0
            position relative
            & .image
                position: absolute
                top 0 
                left 0
                width 100%!important
                height 100%!important
                &:after
                    content: ''
                    position: absolute
                    top 0 
                    left 0
                    width: 100%
                    height 100%
                    background-color rgba(255,255,255,.65)
            & .wrapp
                margin 0 auto
                z-index: 1
                width 95%!important
#otzovi
    background url(../../../../assets/img/b2b/otzovi/otzovi_bg.jpg) 50% 50% no-repeat / cover;
    position relative
    &:after
        content: ''
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        background-color rgba(255,255,255,0.8)
    .head-wrapper
        z-index: 1
    & .comments
        display: flex
        flex-direction: column
        align-items: center
        & .image
            max-width 200px
            max-height: 200px
        & .name
            text-align: center