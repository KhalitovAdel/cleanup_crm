/* You can add global styles to this file, and also import other style files */
@import "~bootstrap/dist/css/bootstrap-reboot.min.css";
@import "~bootstrap/dist/css/bootstrap-grid.min.css";
@import "~ng-pick-datetime/assets/style/picker.min.css";
@import "~@angular/material/prebuilt-themes/indigo-pink.css";
@import 'style/varibles.styles.styl';
body
    background-color: $body-color;
    font-family: 'Roboto', sans-serif;
    color:$main-tect-color
h1, h2, h3, h4, h5, h6, .description
    line-height 1.1
    margin-bottom 1rem
    z-index: 1
    font-weight bold
h1, .description
    color: $insert-text-color
    text-shadow: 1px 1px 3px #000
    text-align: center
h2
    margin-bottom 2rem
h4
    color: $insert-text-color
    font-size: 1.3rem
.head-wrapper
    display: flex;
    justify-content: center
.main-text-color
    color: $main-tect-color
.title
    position relative
    &:after
        content: "";
        position: absolute;
        left: -20px;
        top: 0;
        bottom: 0;
        width: 10px;
        background-color: $secondary-color;
.base-button
    background-color $button-color
    color: $insert-text-color
.p-0
    padding: 0;    
.text-center
    text-align: center!important
.w-100
    width 100%!important
.font-weight-bold
    font-weight: 800!important
.bg-secondary
    background-color $secondary-color!important;
.bg-main
    background-color $main-color!important;
nav 
    padding: 10px 10px
    & i.material-icons
        color: $insert-text-color
    & .tel
        font-weight bold
        color: $insert-text-color
        &:hover
            text-decoration: none
    & .wrap
        width: 100
        display: flex
        flex-direction: row
        justify-content: space-between
        align-items: center

section 
    padding 2rem 0px
    display block
footer 
    padding: 2rem 0
    & img.logo
        width 120px
        margin-bottom 20px
    & i.material-icons
        color $secondary-color
        font-size: 1.5rem
    & address, a, p
        margin 0 0 0 10px
        color: $insert-text-color
        font-weight bold
        &:hover
            text-decoration none
            cursor pointer
            color $insert-text-color
    & .wrap
        margin-bottom 10px
        display: flex
        flex-direction: row
.form-container 
    display: flex
    flex-direction: column
mat-form-field
    margin-bottom 0.5rem
    & .mat-form-field-wrapper
        padding-bottom 0
        margin 0
        & .mat-form-field-flex
            position relative
            & .mat-form-field-outline
                & .mat-form-field-outline-end
                    background-color #fff
                & .mat-form-field-outline-start
                    background-color #fff
            & .mat-form-field-suffix
                position absolute
                right 10px
                top 12px
                & button 
                    & mat-icon
                        font-size: 1rem
        & .mat-form-field-infix
            padding: 5px 0 12px 0
            & .mat-select-arrow-wrapper
                transform none
.mat-menu-panel
    padding: 10px
mat-slide-toggle
    font-size: 14px

/* width */
::-webkit-scrollbar {
    width: 4px;
}

/* Track */
::-webkit-scrollbar-track {
    background-color transparent
    border-radius: 10px;
}

/* Handle */
::-webkit-scrollbar-thumb {
    background: $button-color; 
    border-radius: 10px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
    background: $button-color; 
}
@import 'style/media.styles.styl';