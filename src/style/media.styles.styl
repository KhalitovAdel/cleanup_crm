// /* Custom, iPhone Retina */
@media only screen and (min-width: 320px)
    h1
        font-size: 1.5rem
    .description
        font-size: 0.9rem
    h2
        font-size: 1.6rem
    h3
        font-size: 1.2rem
    nav 
        & .logo
            width: 80px
        & .tel
            font-size: 1rem
// /* Extra Small Devices, Phones */
@media only screen and (min-width: 480px)
    h1
        font-size: 2rem
    .description
        font-size: 1.1rem
    h2
        font-size: 1.8rem
    h3
        font-size: 1.4rem
// /* Small Devices, Tablets */
@media only screen and (min-width: 768px)
    h1
        font-size: 2.5rem
    .description
        font-size: 1.3rem
    h2
        font-size: 2rem
    h3
        font-size: 1.6rem
    nav 
        & i.material-icons
            font-size: 2rem
        & .logo
            width: 120px
        & .tel
            font-size: 1.3rem
// /* Medium Devices, Desktops */
@media only screen and (min-width: 992px)
    h1
        font-size: 3rem
    .description
        font-size: 1.5rem
    h2
        font-size: 2.2rem
    h3
        font-size: 1.8rem
// /* Large Devices, Wide Screens */
@media only screen and (min-width: 1200px)
    h3
        font-size: 2rem